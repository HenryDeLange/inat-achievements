{
    "name": "inat-achievements",
    "description": "Achievements based on observations recorded on iNaturalist.",
    "author": "MyWild <henry@mywild.co.za> (http://www.mywild.co.za)",
    "email": "henry@mywild.co.za",
    "license": "MIT",
    "version": "2.0.10",
    "private": true,
    "homepage": "./",
    "main": "./public/electron.js",
    "dependencies": {
        "@reduxjs/toolkit": "^1.8.6",
        "@types/node": "^18.11.2",
        "@types/react": "^18.0.21",
        "@types/react-dom": "^18.0.6",
        "@types/react-redux": "^7.1.24",
        "bootstrap": "^5.2.2",
        "date-fns": "^2.29.3",
        "i18n-js": "^3.9.2",
        "inaturalistjs": "github:inaturalist/inaturalistjs",
        "react": "^18.2.0",
        "react-bootstrap": "^2.5.0",
        "react-bootstrap-icons": "^1.9.1",
        "react-bootstrap-typeahead": "^6.0.0",
        "react-dom": "^18.2.0",
        "react-redux": "^8.0.4",
        "react-scripts": "^5.0.1",
        "redux-persist": "^6.0.0"
    },
    "devDependencies": {
        "@types/i18n-js": "^3.8.3",
        "@types/jest": "^29.2.0",
        "electron": "^21.1.1",
        "electron-builder": "^23.6.0",
        "electronmon": "^2.0.2",
        "gh-pages": "^4.0.0",
        "jest": "^29.2.1",
        "react-git-info": "^2.0.1",
        "ts-jest": "^29.0.3",
        "typescript": "^4.8.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:verify:taxa": "jest VerifyTaxa.test.ts -- --run-verify-taxa",
        "build": "react-scripts build",
        "predeploy": "npm run build",
        "deploy": "gh-pages -d build",
        "electron:start": "electronmon .",
        "electron:package:win": "npm run build && electron-builder -w -c.extraMetadata.main=build/electron.js",
        "electron:package:linux": "npm run build && electron-builder -l -c.extraMetadata.main=build/electron.js",
        "electron:package:mac": "npm run build && electron-builder -m -c.extraMetadata.main=build/electron.js",
        "electron:package:release:win": "npm run build && electron-builder -w -c.extraMetadata.main=build/electron.js --publish=always",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": [
            "react-app"
        ]
    },
    "browserslist": {
        "production": [
            "last 1 electron version",
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 electron version",
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "build": {
        "appId": "za.co.mywild.inat-achievements",
        "productName": "Wild Achievements",
        "publish": [
            {
                "provider": "github",
                "releaseType": "release"
            }
        ],
        "files": [
            "build/**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "buildResources": "public"
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "linux": {
            "target": [
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        }
    }
}
